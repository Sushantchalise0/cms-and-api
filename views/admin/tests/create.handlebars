<h1>CREATE POST HERE</h1>

{{#each errors}}

    <div class="alert alert-danger">
    {{message}}
    </div>
{{/each}}

<form action="/admin/tests/create" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="title"> Title </label>
        <input type="text" name="title" class="form-control" id="tittle" placeholder="Enter Title">
    </div>
     <div class="form-group">
        <label for="title"> description </label>
        <input type="text" name="description" class="form-control">
    </div>
     <div class="form-group">
        <label for="title"> link </label>
        <input type="text" name="link" class="form-control">
    </div>
    <div class="form-group">
        <label for="detail"> USER </label>
        <select name="detail" id="status" class="form-control">
        
         {{#each details}}
            <option value='{{id}}'>{{user_name}}</option>
            {{/each}}
        </select>
    </div>

    <button type="submit" class="btn btn-primary"> CREATE </button>

</form>