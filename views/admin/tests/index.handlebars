<h1>ALL POSTS</h1>

{{!-- {{> home/form-msgs}} --}}

<table class="table table-bordered">
<thead>
    <tr>
        <th>user</th>
        <th>title</th>
        <th>description</th>
        <th>date </th>
        <th>link</th>
        <th>Username</th>
    </tr>
</thead>

<tbody>

    {{#each tests}}
    <tr>
         <td>{{user}}</td>
        <td>{{title}}</td>
        <td>{{description}}</td>
        <td>{{date}}</td>
        <td>{{link}}</td>
        <td>{{detail.user_name}}</td>
        <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td>
        <td><a href="/post/{{id}}" class="btn btn-info">View</a></td>
        <td>
            <form action="/admin/posts/{{id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">DELETE</button>
            </form>
        </td>
    
    </tr>
    {{/each}}

</tbody>



</table>