<h1>ADD FEATURED HERE</h1>

{{#each errors}}

    <div class="alert alert-danger">
    {{message}}
    </div>
{{/each}}

<form action="/admin/featured/create" method="post" enctype="multipart/form-data">
   
        <div class="form-group">
        <label for="img"> Featured Image </label>
        <input type="file" name="img" class="form-control">
    </div>
    
     <div class="form-group">
        <label for="url"> URL </label>
        <input type="text" name="url" class="form-control" id="url" placeholder="Enter URL">
    </div>


    <button type="submit" class="btn btn-primary"> CREATE </button>

</form>