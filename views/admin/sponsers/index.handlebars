<h1>ALL SPONSERS</h1>

{{!-- {{> home/form-msgs}} --}}
<div class="box-body" style="overflow-x:auto;">
<table id="example" class="table table-bordered">
<thead>
    <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Status</th>
        <th>Short Description</th>
        <th>Offers</th>
        <th>Coins REQ</th>
        <th>Date</th>
        <th>Actions</th>
    </tr>
</thead>

<tbody>
    {{#each sponsers}}
    <tr>
        <td><img height="50" class="img-responsive" src="{{file}}" alt=""></td>
        <td>{{title}}</td>
        <td>{{status}}</td>
        <td>{{description}}</td>
        <td>{{offer}}</td>
        <td>{{coins}}</td>
        <td>{{generateTime date 'MMMM Do YYYY'}}</td>
        <td><a href="/admin/sponsers/edit/{{id}}" class="btn btn-info">Edit</a>
            <form action="/admin/sponsers/{{id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">DELETE</button>
            </form>
        </td>
    
    </tr>
    {{/each}}

</tbody>
</table> 
</div>