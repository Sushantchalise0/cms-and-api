<h1>EDIT BLOGS HERE</h1>

<form action="/admin/blogs/edit/{{blogs.id}}?_method=PUT" method="post">

    <div class="form-group">
        <label for="title"> Title </label>
        <input type="text" name="title" class="form-control" id="tittle" value="{{blogs.title}}">
    </div>



    <div class="form-group">
        <label for="description"> Description </label>
        <textarea name="description" class="form-control" id="description" cols="30" rows="10" value="{{blogs.description}}"></textarea>
    </div>

<div class="form-group">
        <label for="link"> Link </label>
        <textarea name="link" class="form-control" id="link" cols="10" rows="10">{{sponser.link}}</textarea>
    </div>

    <button type="submit" class="btn btn-primary"> UPDATE </button>

</form>