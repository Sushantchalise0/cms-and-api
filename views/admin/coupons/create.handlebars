{{#each errors}}

    <div class="alert alert-danger">
    {{message}}
    </div>
{{/each}}

<form action="/admin/coupons/create" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="productID"> Products </label>
        <select name="productID" id="status" class="form-control">
        
         {{#each products}}
            <option value='{{id}}'>{{name}}</option>
            {{/each}}
        </select>
    </div>


    <div class="form-group">
        <label for="detail"> USER </label>
        <select name="detail" id="status" class="form-control">
        
         {{#each details}}
            <option value='{{id}}'>{{user_name}}</option>
            {{/each}}
        </select>
    </div>

    <div class="form-group">
        <label for="qrKey"> QR </label>
        <input type="number" name="qrKey" class="form-control" id="qrKey" placeholder="Enter distance">
    </div>

    <div class="form-group">
        <label for="v_status" class="form-check-label"> 
        <input type="checkbox" name="v_status" class="form-check-input" id="v_status" >
        Verified
        </label>
    </div>

    <button type="submit" class="btn btn-primary"> CREATE </button>

</form>